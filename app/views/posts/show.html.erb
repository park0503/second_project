<div class="card mb-3">
    <div class="card-header">
        <h3>
            <%= @post.title %></h3>
    </div>
    <div class="card-body">
        <%= @post.body %>
    </div>
    <div class="card-footer">
        <div class="row justify-content-between pl-2 pr-4">
            작성자 : <%= @post.user&.email %>
            <% if current_user.present? %>
            <div class="row">
                <%= form_tag("/post/#{@post.id}/toggle", method:"post", remote:true) do %>
                <% if @like.present? %>
                <button>
                    <i class="fas fa-thumbs-up liked"></i>
                </button>
                <%else%>
                <button>
                    <i class="far fa-thumbs-up"></i>
                </button>
                <%end%>
                <%end%>
                <span class="ajaxLikeSize"><%=@post.likes.size%></span>
            </div>
            <%else%>
            <div>
                <i class="far fa-thumbs-up"></i>
                <%=@post.likes.size%>
            </div>
            <%end%>
        </div>
    </div>
</div>




<% if current_user %>
<%= render "comments/form", comment: Comment.new, post: @post, user: current_user %>
<%end%>

<hr>

<%= render "comments/comments", comments: @post.comments.order(created_at: :desc) %>

<hr>


<%= link_to "뒤로가기", posts_path %>