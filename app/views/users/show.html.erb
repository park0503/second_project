<div class="w-50" style="display:table; margin-left:auto; margin-right:auto">
    <header class="row justify-content-around align-items-center pl-5 pr-5 pt-3 pb-2">
        <div class="avatar">
            <% if @user.image.present? %>
            <img src="<%= @user.image.url %>" class="rounded-circle mb-3" style="width: 150px; height: 150px"></img>
            <%else%>
            <!--
        <i class="fas fa-user fa-lg text-gray" style="width: 150px; height: 150px"></i>
        -->
            <img src="data:image/png;base64," class="rounded-circle" style="width: 150px height: 150px"></img>
            <%end%>
        </div>
        <div class="userinfo">
            <div class="row justify-content-around mb-2">
                <div class="username mr-2">
                    <% if @user.name.present? %>
                    <%= @user.name %>
                    <% else %>
                    <%= @user&.email%>
                    <% end %>
                </div>
                <div class="interaction mr-2">
                <%= form_tag("/follow/#{current_user.id}/follow/#{@user.id}", method:"post", remote:true) do %>
                    <% if current_user.blank?%>
                    <% elsif @user == current_user %>
                    <%=link_to "프로필 편집", "/users/#{current_user.id}/edit", method: :get%>
                    <%=link_to "구매내역", "/order/record", method: :get%>
                    <% elsif current_user.follows.find_by(target_id: @user.id).present? %>
                <button>
                    <i class="fab fa-twitter followed" id="follow-<%=@user.id%>"></i>
                </button>
                <%elsif%>
                <button>
                    <i class="fab fa-twitter" id="follow-<%=@user.id%>"></i>
                    <%end%>
                    <%end%>
                </div>
            </div>
            <div class="row justify-content-around mb-2">
                <span class="mr-2">게시물 <%= @user.posts.size %></span>
                <span class="mr-2" id="followSize">팔로워 <%= @followers.size %></span>
                <span class="mr-2">팔로우 <%= @follows.size %></span>
            </div>
            <div class="user_description mb-2"><%= @user&.introduce %></div>
        </div>
    </header>
    <hr>



    <div class="px-2 d-flex flex-wrap justify-content-around ">
        <% if @posts.present? %>
        <% @posts.each do |post| %>

        <a href="/posts/<%= post.id %>" class="border position-relative post-preview mb-2" style="width: 30%">
            <%if Image.find_by(post_id: post.id).present? %>
            <img src="<%= Image.find_by(post_id: post.id).image_url %>" class="position-absolute w-100 h-100">
            <%else%>
            <div class="postion-absolute w-100 h-100">
                <%= truncate post.body %>
            </div>
            <% end %>
        </a>

        <%end%>
        <%else%>
        <div class="list-group-item list-group-item-action">
            <h3>게시글이 없습니다.</h3>
        </div>
        <%end%>


    </div>
</div>